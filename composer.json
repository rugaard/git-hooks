{
  "name": "rugaard/git-hooks",
  "type": "composer-plugin",
  "description": "Composer plugin for handling Git hooks.",
  "keywords": [
    "morten",
    "rugaard",
    "morten rugaard",
    "composer",
    "plugin",
    "composer plugin",
    "git",
    "hooks",
    "git hooks"
  ],
  "authors": [
    {
      "name": "Morten Rugaard",
      "email": "morten@rugaard.me",
      "homepage": "https://github.com/rugaard",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/rugaard",
  "support": {
    "issues": "https://github.com/rugaard/git-hooks/issues",
    "source": "https://github.com/rugaard/git-hooks"
  },
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "composer-plugin-api": "^1.0|^2.0",
    "composer/composer": "^1.0|^2.0",
    "nunomaduro/collision": "^6.0",
    "symfony/console": "^6.0",
    "symfony/finder": "^6.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Rugaard\\GitHooks\\": "src"
    }
  },
  "extra": {
    "class": "Rugaard\\GitHooks\\Composer\\Plugin"
  },
  "bin": ["bin/git-hooks"],
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
